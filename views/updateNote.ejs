      </a>
        </div>
      </div>
      <button type="submit" class="btn btn-lg">PUBLISH
      </button>
    </nav>
    <input value="<%= user.title %>" class="form-control" type="text" placeholder="title" name="title" />
    <textarea
      class="form-control f2 bg-dark text-light fs-2 w-50 h-75 mt-5"
      name="txtArea"
      id=""
      cols="30"
      rows="10"
    ><%= user.txtArea %></textarea>
