<div class="w-100 h-100">
  <form
    class="mt-4 w-100 h-100 d-flex flex-column justify-content-center align-items-center"
    action="/update/<%= user._id %>" method="post">
    <nav class="w-100 d-flex justify-content-between">
      <div>
        <div class="d-flex">
          <i class="ri-arrow-left-line fs-2"></i>
          <a class="text-decoration-none text-dark d-flex" href="/">
